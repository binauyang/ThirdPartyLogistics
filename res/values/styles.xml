<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ConnDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_dialog_conn</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="TPL_Title">
        <item name="android:background">@color/iqiyiaqua</item>
    </style>
    
    <style name="TPL_TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FF555555</item>
    </style>
    
    <style name="TPL_TextView.Normal" parent="@style/TPL_TextView">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="TPL_TextView.Normal.OnDark" parent="@style/TPL_TextView.Normal">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    
    <style name="TPL_TextView.Title" parent="@style/TPL_TextView.Normal.OnDark">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="TPL_TextView.Action" parent="@style/TPL_TextView.Normal.OnDark">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TPL_TextView.Action.OnLeft" parent="TPL_TextView.Action">
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/actionbar_up_indicator</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>
    
    <style name="TPL_Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TPL_Button.Normal.Blue" parent="@style/TPL_Button">
        <item name="android:background">@drawable/selector_btn_blue_corner</item>
    </style>

</resources>
